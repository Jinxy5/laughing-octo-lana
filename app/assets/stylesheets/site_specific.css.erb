/* xs */
#viewport {  font-size: 1px }

.donate-well .donate {
  font-size: 1.2em !important; 
}

.hot-panel li {
}

/* sm */
@media all and (min-width: 768px){
  #viewport {  font-size: 2px }



  	.navbar img {
    	float: left;
  	}

  	.social a {
    	margin: 0 4%;
  	}

  	.header-extra {
    	float: left;
  	}

  	.authentication {
    	float: left;
  	}

	.social {
    	float: left;
  	}


  .hot-panel li {
  	margin-right: 10px;
  }
}

/* md */
@media all and (min-width: 992px){
  #viewport {  font-size: 3px }
}

/* lg */
@media all and (min-width: 1200px){
  #viewport {  font-size: 4px }
}



