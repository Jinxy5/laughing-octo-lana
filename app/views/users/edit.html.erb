<div class="container">
<p>&nbsp;</p>

<div class="row">
<div class="col-md-12">


<h2>Edit Your Profile</h2>

				
				
<%= form_for(@user) do |f| %>


  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
     
    </div>
  <% end %>

  <%= f.label 'First Name' %><br>
  <%= f.text_field :first_name, class: 'form-control' %><br>

  <%= f.label 'Last Name' %><br>
  <%= f.text_field :last_name, class: 'form-control' %><br>

  <%= f.label 'Public Email' %><br>
  <%= f.email_field :public_email, class: 'form-control' %><br>

  <%= f.label 'Address' %><br>
  <%= f.text_field :address, class: 'form-control' %><br>

  <%= f.label 'Nearest Town' %><br>
  <%= f.text_field :nearest_town, class: 'form-control' %><br>

  <%= f.label 'Landline' %><br>
  <%= f.text_field :landline, class: 'form-control' %><br>

  <%= f.label 'Mobile' %><br>
  <%= f.text_field :mobile, class: 'form-control' %><br>


  <%= f.label 'Postcode' %><br>
  <%= f.text_field :postcode, class: 'form-control' %><br>

  <%= f.submit 'Update', class: 'btn btn-success' %><br>
  
<% end %>
				

<div class="col-md-12">
			


  <div class="clearfix"></div>
</div>
<div class="col-md-12">

  <!-- make a partial -->
  <h4> Upload new profile image: </h4>
    <%= show_uploaded_image(@user.avatar, width: 200) %>

    <div class = 'col-xs-6'>
      <%= form_for(@user, :html => { :multipart => true }, url: user_avatar_create_path(@user), method: :post ) do |f| %>
          <%= f.file_field :file_name %>
          <br>
          <%= f.submit 'Upload Image' %>
          <br>
          <p class="help-block">Please make sure your image is a jpeg and no bigger than 2MB</p>

      <% end %>
    </div>
  
  <!-- partial end-->

  


<p>&nbsp;</p>
<p><a href="#"><i class="fa fa-long-arrow-left"></i> Back to Blood Bikes Wales</a></p>

&nbsp;&nbsp;
<p>&nbsp;</p>
		
</div>
</div>
</div>