  <div class = 'col-xs-12 content'>
  
    <div class = 'post'>
      <div class = 'meta-block'>
        <h1 class = 'title'> <%= @event.title %> </h1>
        <div class = 'post-meta'>
          <div class = 'meta-cats pull-left'> When is it:  <%= @event.startdate.strftime('%D') %>   </div>
                <!--

          <div class = 'meta-tags pull-right'> Tags: <a href = '#'> One</a>, <a href = '#'> Two</a>, <a href = '#'> Three</a>  </div>
          -->
        </div>
  
        <div class = 'clearfix'></div>

      </div>

      <div class = 'post-body'>
        <p>
          <div class="cropper-container">
              <div class="image-container" style='background-image: url(<%= image_path(@event.image_path)  %>)'></div>
          </div>  
        </p>

        <p>

          <%= @event.content %>
        </p>
      </div>
    </div>      
  
  </div>

