<a href='#'>
  <div class="postdivider">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
        <h4>name of forum</h4>
        </div>
  
        <div class="col-xs-3">
        <h4>topics</h4>
        </div>
        
        <div class="col-xs-3">
        <h4>replies</h4>
        </div>
      
        <div class="col-xs-3">
        <h4>last reply</h4>
        </div>
      </div>
    </div>
  </div>
