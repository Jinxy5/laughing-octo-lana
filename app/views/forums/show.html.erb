			<h2> <%= @forum.name %> forum</h2>
			<h4> <%= @forum.description %> </h4>
			</div>
			
			<div class="col-md-4">
		<p>&nbsp;</p>

			<p><%= will_paginate @discussions %>
			</p></div>
			
