<% page_title(@forum.name + ' forum') %>























-----------------------
<p id="notice"><%= notice %></p>

  <h3> <%= @forum.name %> </h3>
  <h3> <%= @forum.description %> </h3>

   <a href = <%= new_forum_discussion_path(@forum) %> class = 'btn btn-primary col-xs-12 col-sm-3'> Create a discussion <span class= 'fa fa-gavel'></span> </a>
  
	
<table class="table table-striped table-bordered" style="margin-bottom: 15px;">
<thead class="topiclist">
<tr class="header">
<th width="50%"> Discussion </th>
<th class="posts">Posts </th>
<th class="views">Views</th>
<th class="lastpost"><span> Last Reply </span></th>
</tr>
</thead>






<tbody class="topiclist topics">


<% @forum.discussions.each do |discussion| %>
		
	<tr class="t-row success-color">
	<td class=" success-color" width="50%" title="No unread posts"><span class="label label-success pull-right">STICKY</span> 
		<%= link_to discussion.name, forum_discussion_path(@forum, discussion) %>
	<br>
	by <%= link_to discussion.user.user_name %> &#187; <%= discussion.created_at.strftime('%a, %b %d, %Y %I:%M %P ') %>
	</td>
	<td class="posts success-color"><center><span class="badge"> <%= discussion.posts.count %></span></center></td>
	<td class="views success-color"><center><span class="badge"> <%= discussion.impression_count%> </span></center></td>
	<td class="lastpost success-color"><span>


	<% if discussion.last_post %>
		<dfn>Last post </dfn>by 

		<%= link_to discussion.last_post.user.user_name %>

		<br>

		<%= discussion.last_post.created_at.strftime('%a, %b %d, %Y %I:%M %P ') %>
	<% else %>

		No posts yet, why not be the first?
	<% end %>




	
	
	</td>
	</tr>
<% end %>


</tbody>
</table>


<%#= link_to 'Edit', edit_forum_path(@forum) %>
<%#= link_to 'Back', forums_path %>
