
<% @recitals.in_groups_of(3, false).each do |group| %>
  
  <div class = 'index-row row'>

    <% group.each do |recital| %>

      <div class = 'col-sm-4'>
        <div class = 'inner'>

          <div class="cropper-container">
                      <div class="image-container" style='background-image: url(<%= image_path(recital.image_path)  %>)'></div>
                  </div>  
                                        
                      <div class = 'panel-info'>
                      <div class = 'hot-panel-info'>
                        <h3> <%= truncate(recital.title, length: 40) %> </h3>
                        <p> <%=  truncate(recital.content, length: 80) %></p>
                      </div>

                      <div class = 'donation-info'>
                        

                      <div class = 'actions'>
                         <%= link_to 'More Details', recital, class: 'btn btn-danger btn-xs' %> <span>or</span> <a href = '/donate' class = 'btn btn-success btn-xs'> Make a Donation </a>
                      </div>
                    </div>
                      </div>
        </div>
      </div>
    <% end %>

  </div>


    



<% end %>
