<%= render partial: 'panels/sidebar' %> 




<div class="col-sm-10">
	<h2>Edit News Story</h2>

<div class="col-sm-10">
	<h2>News</h2>
	<h4>EDIT STORY</h4>
							
				


<%= form_for( @story ) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
  	<%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: @story.title %><br>
    
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: @story.description, rows: 4 %>

    <%= f.label :image %><br>
    <%= show_uploaded_image(@story.photo, width: 800, height: 504, for: :story) %><br>
    <div class = 'clearfix'></div>
    <%= f.file_field :file_name %>

  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Publish', class: 'btn btn-success' %>
    <p></p>
    
  </div>
<% end %>
<%= button_to 'Delete', story_path(@story), class: 'btn btn-danger', method: :delete, confirm: "Are you sure you want to delete the story, '#{@story.title}'? It will be permanantly delted!" %> 




<p>&nbsp;</p>

</div>

						
</div>