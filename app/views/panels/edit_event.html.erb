<%= render partial: 'sidebar' %> 
<div class="container">
	<div class="col-sm-9">
		<h2>Add a Calendar Event</h2>
		<form role="form">
		  	<div class="form-group">
			    <label for="Nameofevent">Name of Event</label>
			    <input type="text" class="form-control" id="NameofEvent" placeholder="Enter name of event">
			    <p>&nbsp;<p>
			    <label for="Descriptionofevent">Description</label>
			    <textarea class="form-control" rows="3"></textarea>
		    	<p>&nbsp;<p>

		    	<div class="col-sm-9">

			       <div class='col-sm-6'>
			        	<span class="bold">Start Date/Time   </span>
			            <div class="form-group">
			                <div class='input-group date' id='datetimepicker8'>
			 					<input type='text' class="form-control" />
			                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
			                </div>
			            </div>
			        </div>

			        <div class='col-sm-6'>
			            <span class="bold">Finish Date/Time   </span>
			            <div class="form-group">
			                <div class='input-group date' id='datetimepicker9'>
			                    <input type='text' class="form-control" />
			                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
			                </div>
			            </div>
			        </div>
			    </div> 

			    <div class = "clearfix"></div>

			    <script type="text/javascript">
			        $(function () {
			            
			            $('#datetimepicker8').datetimepicker();
			            $('#datetimepicker9').datetimepicker();
			            
			            $("#datetimepicker8").on("dp.change",function (e) {
			               $('#datetimepicker9').data("DateTimePicker").setMinDate(e.date);
			            });
			            $("#datetimepicker9").on("dp.change",function (e) {
			               $('#datetimepicker8').data("DateTimePicker").setMaxDate(e.date);
			            });
						
			        });
			    </script>

				<span class="bold">Choose Calendar to add this Event to</span>

			    <div class="radio">
  					<label>
    				<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
   					Public Calendar
  					</label>
				</div>
				<div class="radio">
  					<label>
    					<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
    					Admin Calendar
  					</label>
				</div>
				<div class="radio">
  					<label>
    					<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
    					Rider Calendar
  					</label>
				</div>
				<div class="radio">
  					<label>
    					<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
    					Midweek Calendar
  					</label>
				</div>
				<div class="radio">
  					<label>
    					<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
    					Coordinator Calendar
  					</label>
				</div>


				
		    	<p>&nbsp;<p>
 
				<button type="button" class="btn btn-success"><i class="fa fa-thumb-tack"></i> Add Event to this Calendar</button>
	    	</div>
		</form>
	</div>
</div>


