<%= render partial: 'sidebar' %> 


<div class="col-sm-10">

				<h2>Users</h2>
<div class="table-responsive">						
<table class="table">
	<thead>		
			<tr>
					<td><strong>User Name</strong></td>
					<td><strong>Applied</strong></td>
					<td><strong> Accepted</strong></td>
					<td><strong>Roles&nbsp;&nbsp;&nbsp;</strong></td>
					<td><strong>Posts</strong></td>
					<td><strong>Discussions<br>
							Started</strong></td>
		<!--			<td><strong>Reported<br>
							Posts</strong></td>
					<td><strong>Correctly<br>
							Reported<br>
							Posts</strong></td>
					<td><strong>Their<br>
							Posts<br>
							Reported</strong></td>
					<td><strong>Their<br>
							Posts<br>
							Deleted</strong></td>  -->
			</tr>
	</thead>
		<tbody>



			<% @users.each do |user| %>
				<tr class = <%= if user.is_admin? 
								  	"success"
								  elsif user.is_coordinator? || user.is_midweek? || user.is_rider? && !user.is_admin?
								  	"warning"
								  elsif user.is_only_potential?
								  	"danger"
								  end

							%>>
					<td> <%= link_to user.user_name, user_path(user) %> </td>
					<td> <%= user.created_at.strftime('%a, %b %d, %Y %I:%M%P') %> </td>
					<td>TBA</td>



					<td>

						<%= form_for user, url: panel_update_user_path(user) do |f| %>

							<% if user.is_admin? %>
								<i class = "fa fa-check-square"></i>
							<% else %>
								<i class = "fa fa-square"></i>
							<% end %>
							
							<%= f.label :admin %>

							<%= f.check_box :coordinator %>
							<%= f.label :coordinator %>

							<%= f.check_box :midweek %>
							<%= f.label :midweek %>

							<%= f.check_box :rider %>
							<%= f.label :rider %>




					</td>
					
						<td> <%= user.posts.count %> </td>
						<td> <%= user.discourses.count %> </td>
		<!--				<td>2</td>
						<td>4</td>
						<td>2</td>
						<td>1</td> -->
						<td> 


						<%= f.submit 'Approve', class: 'btn btn-success btn-xs', method: :patch %>


					<% end %>

						<%= button_to 'Delete', delete_user_path(user), class: 'btn btn-danger btn-xs', method: :delete %>



					</td>	
				</tr>	
			<tr>

		<% end %>

				
		
</tbody></table>
</div>




<p>&nbsp;</p>

</div>
</div>